<div class="news">
  {% assign reading = site.data.currently_reading %}
  {% if reading and reading != empty %}
    {% assign reading_size = reading | size %}
    <div
      class="table-responsive"
      {% if page.currently_reading.scrollable and reading_size > 3 %}
        style="max-height: 60vw"
      {% endif %}
    >
      <table class="table table-sm table-borderless">
        {% if page.currently_reading.limit %}
          {% assign reading_limit = page.currently_reading.limit %}
        {% else %}
          {% assign reading_limit = reading_size %}
        {% endif %}
        {% for item in reading limit: reading_limit %}
          <tr>
            <th scope="row" style="width: 20%">
              {% if item.date %}
                {{ item.date | date: '%b %d, %Y' }}
              {% endif %}
            </th>
            <td>
              {% if item.url %}
                <a
                  class="news-title"
                  href="{{ item.url }}"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  {{ item.title }}
                </a>
              {% else %}
                <span class="news-title">{{ item.title }}</span>
              {% endif %}
              {% if item.authors %}
                <div class="post-meta">{{ item.authors }}</div>
              {% endif %}
              {% if item.note %}
                <div class="post-meta">{{ item.note }}</div>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No papers yet...</p>
  {% endif %}
</div>
